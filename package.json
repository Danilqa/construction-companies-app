{
    "name": "web-app-starter",
    "version": "0.0.1",
    "license": "-",
    "private": true,
    "scripts": {
        "dev": "yarn webpack-dev-server --config=config/webpack/webpack.config.dev.js --progress",
        "build": "yarn webpack --config=config/webpack/webpack.config.prod.js --progress",
        "lint": "tslint 'src/**/*.{ts,tsx}'",
        "test": "jest",
        "test:ci": "jest --ci --coverage",
        "hooks:pre-commit": "yarn test && lint-staged"
    },
    "dependencies": {
        "@arrival/core-ui-kit": "0.1.15",
        "react": "16.7.0",
        "react-dom": "16.7.0",
        "react-router-dom": "4.3.1",
        "styled-components": "4.1.3"
    },
    "devDependencies": {
        "@eigenspace/codestyle": "1.1.11",
        "@eigenspace/jest-screenshot-testing": "0.1.6",
        "@types/jest": "22.2.2",
        "@types/jest-image-snapshot": "2.4.0",
        "@types/node": "10.12.18",
        "@types/react": "16.7.21",
        "@types/react-dom": "16.0.11",
        "@types/react-router-dom": "4.3.1",
        "@types/react-test-renderer": "16.0.3",
        "clean-webpack-plugin": "1.0.1",
        "html-webpack-plugin": "3.2.0",
        "husky": "1.3.1",
        "jest": "23.6.0",
        "jest-image-snapshot": "2.7.0",
        "jest-styled-components": "6.3.1",
        "lint-staged": "8.1.1",
        "react-test-renderer": "16.8.1",
        "ts-jest": "23.10.5",
        "ts-loader": "5.3.3",
        "tslint": "5.12.1",
        "typescript": "3.3.1",
        "webpack": "4.29.0",
        "webpack-cli": "3.2.1",
        "webpack-dev-server": "3.1.14",
        "whatwg-fetch": "3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn hooks:pre-commit"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint"
        ]
    }
}
