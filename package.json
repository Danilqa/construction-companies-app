{
    "name": "web-app-starter",
    "version": "0.0.1",
    "license": "-",
    "private": true,
    "scripts": {
        "dev": "yarn webpack-dev-server --config=config/webpack/webpack.config.dev.js --progress",
        "build": "yarn webpack --config=config/webpack/webpack.config.prod.js --progress",
        "lint:code": "eslint --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "yarn lint:code --fix",
        "lint:markdown": "node ./node_modules/@eigenspace/codestyle/scripts/markdown-lint.js",
        "lint": "yarn lint:code . && yarn lint:markdown",
        "test": "jest",
        "test:ci": "jest --ci --coverage",
        "hooks:pre-push": "yarn lint && yarn test",
        "script:update-deps-remote": "npx -p @eigenspace/helper-scripts update-deps"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn hooks:pre-push",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint:fix",
            "git add"
        ]
    },
    "dependencies": {
        "@arrival/core-ui-kit": "0.1.41",
        "react": "16.7.0",
        "react-dom": "16.7.0",
        "react-router-dom": "4.3.1",
        "styled-components": "4.1.3"
    },
    "devDependencies": {
        "@eigenspace/codestyle": "latest",
        "@eigenspace/jest-screenshot-testing": "0.1.6",
        "@types/jest": "22.2.2",
        "@types/node": "10.12.18",
        "@types/react": "16.7.21",
        "@types/react-dom": "16.0.11",
        "@types/react-router-dom": "4.3.1",
        "@types/react-test-renderer": "16.0.3",
        "clean-webpack-plugin": "1.0.1",
        "eslint": "5.16.0",
        "html-webpack-plugin": "3.2.0",
        "husky": "1.3.1",
        "jest": " 24.7.1",
        "jest-styled-components": "6.3.3",
        "lint-staged": "8.1.5",
        "prettier": "1.18.2",
        "react-test-renderer": "16.8.1",
        "ts-jest": "24.0.2",
        "ts-loader": "5.3.3",
        "typescript": "3.3.1",
        "webpack": "4.29.0",
        "webpack-cli": "3.2.1",
        "webpack-dev-server": "3.1.14",
        "whatwg-fetch": "3.0.0"
    }
}