{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/types",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "declaration": true,
        "target": "es5",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src"
    ]
}